<%- include('partials/header.ejs')%>
<title><% if (locals.login) { -%>
	Se connecter
	<% }else { -%>S'enregistrer<%}%></title>
</head>
<body class="light-green">
		<div class="row">
			<div class="col s4 offset-s4 light-blue darken-1">
				<form action=<% if (locals.login) { -%>"/login"
					<% }else {%>"/register"<% } %> method='POST'>
					<input type="text" name="username" placeholder="Nom d'utilisateur">
					<input type="password" name="password" placeholder="Mot de passe">
					<% if (locals.login) { -%>
					<button class="btn waves-effect waves-light" type="submit">Se connecter</button>	
					<% }else{ -%>
					<input type="email" name="email" placeholder="Email">
					<button class="btn waves-effect waves-light" type="submit">S'enregistrer</button>
					<%}%>
				</form>
			</div>
		</div>
	<%- include('partials/footer.ejs')%>